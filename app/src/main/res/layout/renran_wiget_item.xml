<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_back">


    <TextView
        android:id="@+id/tv_widget_schedule_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/schedule_string"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_widget_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_widget_schedule_text"
        android:layout_centerHorizontal="true"
        android:text="@string/day"
        android:textColor="@android:color/black"
        android:textStyle="bold" />
</RelativeLayout>